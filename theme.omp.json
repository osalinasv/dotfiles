{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": false,
  "version": 2,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "plain",
          "foreground": "#cba6f7",
          "template": "{{ .Path }} ",
          "properties": {
            "style": "full"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#89dceb",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}red{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0)}}foreground{{ end }}",
            "{{ if gt .Ahead 0 }}green{{ end }}",
            "{{ if gt .Behind 0 }}yellow{{ end }}"
          ],
          "template": "<white>on</> {{ .HEAD }}{{ if .Staging.Changed}}<green> {{ .Staging.String }}</>{{ end }}{{ if .Working.Changed}}<yellow> {{ .Working.String }}</>{{ end }} ",
          "properties": {
            "fetch_status": true,
            "branch_icon": ""
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#585b70",
          "template": "$ "
        }
      ]
    }
  ]
}
